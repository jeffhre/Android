<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/mainLayout">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frag_frame_main"

        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:text="Player 1"
        android:textSize="20sp"
        android:id="@+id/p1edit"
        android:textColor="#800202" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Name"
        android:layout_alignParentLeft="true"
        android:layout_above="@id/p1edit"
        android:id="@+id/p1Text"
        android:textSize="20sp"
        android:textColor="#FFFF4444" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="Player 2"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/p2edit"
        android:textSize="20sp"
        android:textColor="#800202" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Name"
        android:layout_alignParentRight="true"
        android:layout_above="@id/p2edit"
        android:id="@+id/p2Text"
        android:textSize="20sp"
        android:textColor="#FF33B5E5" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hangman"
        android:id="@+id/hangman_button"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="30sp"
        android:textColor="#800202" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tic Tac Toe"
        android:id="@+id/ttt_button"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/hangman_button"
        android:textSize="30sp"
        android:textColor="#800202" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect 4"
        android:id="@+id/connect4_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/hangman_button"
        android:textSize="30sp"
        android:textColor="#800202" />

</RelativeLayout>
